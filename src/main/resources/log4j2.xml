<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    xmlns="jar://C:/Users/admin/.m2/repository/org/apache/logging/log4j/log4j-core/2.6.2/log4j-core-2.6.2.jar!/Log4j-config.xsd">

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="fileTrace" fileName="Logs/simpleCalculator.log" bufferedIO="true" advertiseURI="file://simpleCalculator.log" advertise="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>

        <Root level="trace">
            <AppenderRef ref="fileTrace"/>
        </Root>

    </Loggers>
</Configuration>